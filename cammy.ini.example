# mailer.ini
# contains global variables used by sentry.py

[EmailSetup]
email_server 	:mail.ispnetwork.com
email_user 	:my_rpi@ispnetwork.com
email_alert_user:alert.username@ispnetwork.com
email_password 	:my_email_password
emailSubject 	:response from Raspberry Pi at 
internet_gw 	:192.168.1.254
nw_checks 	:%(internet_gw)s,%(email_server)s
email_polling   :60

[PathSetup]
logdir 		:/var/log/sentry
logfile 	:%(logdir)s/sentry.log
tmpdir 		:/tmp
running_flag    :%(tmpdir)s/sentry_running.txt
stopfile 	:%(tmpdir)s/sentry_stop_monitoring.txt
filepath 	:/tmp
filenamePrefix  :image 
tidy_list       :%(running_flag)s

[CameraSetup]
photo_width 	:640
photo_height 	:480
pct_quality 	:100
sensitivity	:30
threshold	:150
test_width	:100
test_height	:75
film_width      :640
film_height     :480
camera_timeout  :1.5

[GeneralSetup]
use_acl 		:1
verbose         	:0
loopThreshold 		:60
max_running_flag	:3
max_second		:55
testcount		:0
acl		:fred_bloggs@ispnetwork.com,thelm_flintstone@ispnetwork.com

[DropboxSetup]
dropbox_token           :dropbox token
dropbox_app             :app name
dropbox_enabled         :1
dropbox_folder		:/uploads/
dropbox_keep_files	:3
film_duration		:5
enable_film		:1
dropbox_film_folder     :/film uploads/
